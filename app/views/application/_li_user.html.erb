<article class="user-card">
    <%= image_tag(user.photo.blank? ? 'https://via.placeholder.com/100x100.png?text=No+Photo' : user.photo) %>
    <div>
        <h1>
            <%= user.name %>
        </h1>
        <span>
            Number of posts: <%= user.posts_counter %>
        </span>
    </div>
</article>